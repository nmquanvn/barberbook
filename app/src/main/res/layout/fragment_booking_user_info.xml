<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookingUserInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:verticalScrollbarPosition="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Chỉ còn một chút nữa thôi!"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Vui lòng nhập số điện thoại:" />

        <EditText
            android:id="@+id/txtPhone"
            android:background="@drawable/custom_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:hint="Số điện thoại của bạn"
            android:inputType="phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Họ tên của bạn:" />

        <EditText
            android:id="@+id/txtName"
            android:background="@drawable/custom_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:hint="Họ và tên của bạn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Các dịch vụ đã chọn:" />

        <TextView
            android:id="@+id/txtServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Số người:" />

        <TextView
            android:id="@+id/txtBookingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Tổng tiền:" />

        <TextView
            android:id="@+id/txtTotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Yêu cầu khác:" />

        <EditText
            android:id="@+id/txtComment"
            android:background="@drawable/custom_input"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:gravity="left"
            android:maxLines="4"
            android:hint="Ghi chú..."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:id="@+id/tableButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:stretchColumns="1">
                <TableRow>
                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_buttondefault"
                        android:textColor="@drawable/custom_buttondefault_text"
                        android:text="Quay về"/>
                    <LinearLayout />
                    <Button
                        android:id="@+id/btnOK"
                        android:background="@drawable/custom_buttonprimary"
                        android:textColor="@drawable/custom_buttonprimary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xác nhận"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>