<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/black">
                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@raw/img_me"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/txtCurUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chào Bạn"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay có gì mới nào!"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/custom_search_icon"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Tìm mọi thứ..."/>
        <TableLayout
            android:id="@+id/bannerTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:stretchColumns="0,1,2"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp">
            <TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/black">
                        <ImageButton
                            android:id="@+id/btnFind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@raw/img_find"
                            android:scaleType="centerCrop"
                            android:padding="0dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cắt tóc gần nhất"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/black">
                        <ImageButton
                            android:id="@+id/btnBooking"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@raw/img_booking"
                            android:scaleType="centerCrop"
                            android:padding="0dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Đăt lịch"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/black">
                        <ImageButton
                            android:id="@+id/btnServices"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@raw/img_services"
                            android:scaleType="centerCrop"
                            android:padding="0dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Các dịch vụ"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:id="@+id/bannerLogin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Hãy đăng nhập để thực hiện công việc của bạn"
                android:textColor="@color/WhiteSmoke"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Đăng nhập"
                android:tag="1"
                android:backgroundTint="@color/WhiteSmoke"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@raw/img_app"
                android:alpha="0.2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Bạn không có thông báo nào trong hôm nay!"
                android:textColor="@color/black"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>